# 服务器配置
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# 数据库配置
DATABASE_URL="postgresql://user:password@localhost:5432/meeting_system?schema=public"

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# 讯飞语音配置（实时转录）⭐ 必需
IFLYTEK_APP_ID=your-iflytek-app-id
IFLYTEK_API_KEY=your-iflytek-api-key
IFLYTEK_API_SECRET=your-iflytek-api-secret

# 阿里云ASR配置（音频文件转录）⭐ 必需
ALIYUN_ACCESS_KEY_ID=your-aliyun-access-key-id
ALIYUN_ACCESS_KEY_SECRET=your-aliyun-access-key-secret
ALIYUN_ASR_APP_KEY=your-aliyun-asr-app-key
ALIYUN_REGION=cn-shanghai

# pyannote.audio配置（声纹识别）⭐ 必需
PYANNOTE_DEVICE=cpu
PYANNOTE_MODEL_PATH=pyannote/speaker-diarization
PYANNOTE_MIN_SPEAKERS=1
PYANNOTE_MAX_SPEAKERS=10

# Azure Speech Service配置（可选，备用方案）
AZURE_SPEECH_KEY=your-azure-speech-key
AZURE_SPEECH_REGION=eastasia

# Azure Speaker Recognition配置（可选，备用方案）
AZURE_SPEAKER_KEY=your-azure-speaker-key
AZURE_SPEAKER_REGION=eastasia

# DeepSeek AI配置
DEEPSEEK_API_KEY=sk-54c3f8dd90f145e8919f05dc7f137722
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat

# MinIO/S3配置
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=meeting-audio
MINIO_USE_SSL=false

# 文件上传配置
MAX_FILE_SIZE=104857600
ALLOWED_AUDIO_FORMATS=mp3,wav,m4a,aac,ogg,flac

# 邮件配置
SMTP_HOST=smtp.qq.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@qq.com
SMTP_PASS=your-smtp-auth-code

# 日志配置
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# CORS配置
CORS_ORIGIN=http://localhost:8080

# 任务队列配置
QUEUE_REDIS_HOST=localhost
QUEUE_REDIS_PORT=6379

# 音频处理配置
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_RATE=256k

# 声纹识别配置
VOICEPRINT_MIN_DURATION=30
VOICEPRINT_CONFIDENCE_THRESHOLD=0.7

# 转录配置
TRANSCRIPTION_LANGUAGE=zh-CN
TRANSCRIPTION_MAX_ALTERNATIVES=1
ENABLE_SPEAKER_DIARIZATION=true

# 实时识别会话配置
MAX_CONCURRENT_SESSIONS=10
SESSION_TIMEOUT=3600000
CLEANUP_INTERVAL=60000

# AI配置
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=2000
AI_REQUEST_TIMEOUT=60000

# API日志配置
ENABLE_API_LOGGING=true

# 监控配置
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090

# 限流配置
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
